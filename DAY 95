#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    int marks;
};

// Function that returns the structure of the topper
struct Student getTopStudent(struct Student s[], int n) {
    int i, topIndex = 0;

    for(i = 1; i < n; i++) {
        if(s[i].marks > s[topIndex].marks) {
            topIndex = i;
        }
    }

    return s[topIndex];   // return structure
}

int main() {
    struct Student s[3];
    int i;

    // Input for 3 students
    for(i = 0; i < 3; i++) {
        printf("Enter details of student %d:\n", i + 1);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Roll: ");
        scanf("%d", &s[i].roll);

        printf("Marks: ");
        scanf("%d", &s[i].marks);

        printf("\n");
    }

    // Get the top student
    struct Student top = getTopStudent(s, 3);

    // Output
    printf("Top Student: %s | Roll: %d | Marks: %d\n", top.name, top.roll, top.marks);

    return 0;
}
