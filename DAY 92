#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    int marks;
};

int main() {
    struct Student s[5];
    int i;

    // Input for 5 students
    for(i = 0; i < 5; i++) {
        printf("Enter details of student %d:\n", i + 1);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Roll: ");
        scanf("%d", &s[i].roll);

        printf("Marks: ");
        scanf("%d", &s[i].marks);

        printf("\n");
    }

    // Output - Tabular form
    printf("\n%-15s %-10s %-10s\n", "Name", "Roll", "Marks");
    printf("----------------------------------------\n");

    for(i = 0; i < 5; i++) {
        printf("%-15s %-10d %-10d\n", s[i].name, s[i].roll, s[i].marks);
    }

    return 0;
}
